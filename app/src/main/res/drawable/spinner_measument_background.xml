<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="#fff">
                </solid>
                <corners android:radius="3dp" />
                <padding
                    android:bottom="6dp"
                    android:left="8dp"
                    android:right="8dp"
                    android:top="6dp" />
